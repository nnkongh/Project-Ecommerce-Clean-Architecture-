@using System.Globalization
@using Ecommerce.Web.ViewModels.Profile
@model ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Profile Card -->
            <div class="card shadow-sm">
                <!-- Header với Avatar -->
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="me-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl"
                                     alt="Avatar"
                                     class="rounded-circle border border-3 border-white"
                                     style="width: 100px; height: 100px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://ui-avatars.com/api/?name=@Model.UserName&size=100&background=random&color=fff&bold=true"
                                     alt="Avatar"
                                     class="rounded-circle border border-3 border-white"
                                     style="width: 100px; height: 100px; object-fit: cover;">
                            }
                        </div>
                        <div>
                            <h3 class="mb-1">@Model.UserName</h3>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-envelope me-2"></i>@Model.Email
                            </p>
                            <p class="mb-0 mt-2 opacity-75">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Tham gia: @Model.CreateAt.ToString("dd/MM/yyyy", CultureInfo.CurrentCulture)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <!-- Thông tin cá nhân -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-user me-2 text-primary"></i>Thông tin cá nhân
                        </h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small mb-1">Tên đăng nhập</label>
                                <p class="mb-0 fw-bold">@Model.UserName</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small mb-1">Email</label>
                                <p class="mb-0 fw-bold">@Model.Email</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small mb-1">Số điện thoại</label>
                                <p class="mb-0 fw-bold">@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>Địa chỉ
                        </h5>
                        @if (Model.Address != null)
                        {
                            <div class="bg-light p-3 rounded">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="text-muted small mb-1">
                                            <i class="fas fa-road me-1"></i>Đường
                                        </label>
                                        <p class="mb-0">@Model.Address.Street</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="text-muted small mb-1">
                                            <i class="fas fa-building me-1"></i>Phường/Xã
                                        </label>
                                        <p class="mb-0">@Model.Address.Ward</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="text-muted small mb-1">
                                            <i class="fas fa-map me-1"></i>Quận/Huyện
                                        </label>
                                        <p class="mb-0">@Model.Address.District</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="text-muted small mb-1">
                                            <i class="fas fa-city me-1"></i>Tỉnh/Thành phố
                                        </label>
                                        <p class="mb-0">@Model.Address.Province</p>
                                    </div>
                                    <div class="col-12">
                                        <label class="text-muted small mb-1">
                                            <i class="fas fa-flag me-1"></i>Thành phố
                                        </label>
                                        <p class="mb-0">@Model.Address.City</p>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Bạn chưa cập nhật thông tin địa chỉ. Vui lòng cập nhật để thuận tiện cho việc giao hàng.
                            </div>
                        }
                    </div>

                    <!-- Thông tin tài khoản -->
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Trang chủ
                        </a>
                        <div>
                            <a href="@Url.Action("Index", "Order")" class="btn btn-info me-2">
                                <i class="fas fa-shopping-bag me-2"></i>Đơn hàng
                            </a>
                            <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Cards (Optional) -->
            <div class="row mt-4 g-3">
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <i class="fas fa-box fa-2x text-primary mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Đơn hàng</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Yêu thích</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Giỏ hàng</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>