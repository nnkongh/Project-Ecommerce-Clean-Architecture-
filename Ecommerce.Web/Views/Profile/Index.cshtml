@using System.Globalization
@using Ecommerce.Web.ViewModels.Profile
@model ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-11">
            <!-- Profile Card -->
            <div class="card shadow-sm">
                <!-- Header với Avatar -->
                <div class="card-header bg-dark text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl"
                                     alt="Avatar"
                                     class="rounded-circle border border-3 border-white"
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://ui-avatars.com/api/?name=@Model.UserName&size=80&background=random&color=fff&bold=true"
                                     alt="Avatar"
                                     class="rounded-circle border border-3 border-white"
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            }
                        </div>
                        <div>
                            <h4 class="mb-1">@Model.UserName</h4>
                            <p class="mb-0 opacity-75 small">
                                <i class="fas fa-envelope me-2"></i>@Model.Email
                                <span class="ms-3">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    Tham gia: @Model.CreateAt.ToString("dd/MM/yyyy", CultureInfo.CurrentCulture)
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-3">
                    <div class="row">
                        <!-- Thông tin cá nhân & tài khoản -->
                        <div class="col-md-4 mb-3">
                            <h6 class="border-bottom pb-2 mb-2">
                                <i class="fas fa-user me-2 text-dark"></i>Thông tin cá nhân
                            </h6>
                            <div class="mb-2">
                                <label class="text-muted small mb-1">Tên đăng nhập</label>
                                <p class="mb-0 fw-bold small">@Model.UserName</p>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Email</label>
                                <p class="mb-0 fw-bold small">@Model.Email</p>
                            </div>

                            <h6 class="border-bottom pb-2 mb-2">
                                <i class="fas fa-info-circle me-2 text-dark"></i>Thông tin tài khoản
                            </h6>
                            <div class="mb-2">
                                <label class="text-muted small mb-1">Ngày tạo tài khoản</label>
                                <p class="mb-0 small">
                                    <i class="far fa-calendar-check me-1"></i>
                                    @Model.CreateAt.ToString("dd/MM/yyyy HH:mm", CultureInfo.CurrentCulture)
                                </p>
                            </div>
                            <div>
                                <label class="text-muted small mb-1">Thời gian hoạt động</label>
                                <p class="mb-0 small">
                                    <i class="fas fa-clock me-1"></i>
                                    @((DateTime.Now - Model.CreateAt).Days) ngày
                                </p>
                            </div>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="col-md-8 mb-3">
                            <h6 class="border-bottom pb-2 mb-2">
                                <i class="fas fa-map-marker-alt me-2 text-dark"></i>Địa chỉ
                            </h6>
                            @if (Model.Address != null)
                            {
                                <div class="bg-light p-3 rounded">
                                    <div class="row g-2">
                                        <div class="col-md-4 col-6">
                                            <label class="text-muted small mb-1">
                                                <i class="fas fa-road me-1"></i>Đường
                                            </label>
                                            <p class="mb-0 small">@Model.Address.Street</p>
                                        </div>
                                        <div class="col-md-4 col-6">
                                            <label class="text-muted small mb-1">
                                                <i class="fas fa-building me-1"></i>Phường/Xã
                                            </label>
                                            <p class="mb-0 small">@Model.Address.Ward</p>
                                        </div>
                                        <div class="col-md-4 col-6">
                                            <label class="text-muted small mb-1">
                                                <i class="fas fa-map me-1"></i>Quận/Huyện
                                            </label>
                                            <p class="mb-0 small">@Model.Address.District</p>
                                        </div>
                                        <div class="col-md-4 col-6">
                                            <label class="text-muted small mb-1">
                                                <i class="fas fa-city me-1"></i>Tỉnh/Thành phố
                                            </label>
                                            <p class="mb-0 small">@Model.Address.Province</p>
                                        </div>
                                        <div class="col-md-8 col-12">
                                            <label class="text-muted small mb-1">
                                                <i class="fas fa-flag me-1"></i>Thành phố
                                            </label>
                                            <p class="mb-0 small">@Model.Address.City</p>
                                        </div>
                                    </div>
                                    <div class="mt-2 pt-2 border-top">
                                        <p class="mb-0 text-muted small">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Địa chỉ đầy đủ:
                                            <strong>
                                                @Model.Address.Street, @Model.Address.Ward,
                                                @Model.Address.District, @Model.Address.Province,
                                                @Model.Address.City
                                            </strong>
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0 py-2">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Bạn chưa cập nhật thông tin địa chỉ. Vui lòng cập nhật để thuận tiện cho việc giao hàng.
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Trang chủ
                        </a>
                        <div>
                            <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-dark btn-sm">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Cards (Optional) -->
            <div class="row mt-3 g-2">
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body py-3">
                            <i class="fas fa-box fa-2x text-dark mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Đơn hàng</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body py-3">
                            <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Yêu thích</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center shadow-sm">
                        <div class="card-body py-3">
                            <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                            <h5 class="mb-0">0</h5>
                            <small class="text-muted">Giỏ hàng</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>