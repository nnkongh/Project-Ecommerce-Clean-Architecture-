@using Ecommerce.Application.DTOs.ModelsRequest.Users
@model UpdateProfileRequest

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Chỉnh sửa hồ sơ cá nhân
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Avatar Preview -->
                        <div class="text-center mb-4">
                            <div id="imagePreview" style="display: none;">
                                <img id="preview"
                                     src="#"
                                     alt="Avatar Preview"
                                     class="rounded-circle border border-3 border-primary mb-3"
                                     style="width: 150px; height: 150px; object-fit: cover;">
                            </div>
                            <div>
                                <label class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-upload me-2"></i>Chọn ảnh đại diện
                                    <input asp-for="Avatar"
                                           type="file"
                                           class="d-none"
                                           accept="image/*"
                                           onchange="previewImage(event)" />
                                    <input type="hidden" asp-for="AvatarUrl" />
                                </label>
                                <p class="text-muted small mt-2 mb-0">
                                    <i class="fas fa-info-circle me-1"></i>Định dạng: JPG, PNG. Kích thước tối đa: 5MB
                                </p>
                                <span asp-validation-for="Avatar" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Thông tin cá nhân -->
                        <h5 class="mb-3">
                            <i class="fas fa-user me-2 text-primary"></i>Thông tin cá nhân
                        </h5>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">
                                    <i class="fas fa-signature me-1"></i>Tên đăng nhập
                                </label>
                                <input asp-for="UserName"
                                       class="form-control"
                                       placeholder="Nhập tên đăng nhập" />
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="fas fa-phone me-1"></i>Số điện thoại
                                </label>
                                <input asp-for="PhoneNumber"
                                       class="form-control"
                                       placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Địa chỉ -->
                        <h5 class="mb-3">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>Địa chỉ giao hàng
                        </h5>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Address.City" class="form-label">
                                    <i class="fas fa-city me-1"></i>Tỉnh/Thành phố
                                </label>
                                <input asp-for="Address.City"
                                       class="form-control"
                                       placeholder="VD: Hồ Chí Minh, Hà Nội" />
                                <span asp-validation-for="Address.City" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address.Province" class="form-label">
                                    <i class="fas fa-flag me-1"></i>Tỉnh
                                </label>
                                <input asp-for="Address.Province"
                                       class="form-control"
                                       placeholder="Nhập tỉnh" />
                                <span asp-validation-for="Address.Province" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address.District" class="form-label">
                                    <i class="fas fa-map me-1"></i>Quận/Huyện
                                </label>
                                <input asp-for="Address.District"
                                       class="form-control"
                                       placeholder="VD: Quận 1, Quận Tân Bình" />
                                <span asp-validation-for="Address.District" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address.Ward" class="form-label">
                                    <i class="fas fa-building me-1"></i>Phường/Xã
                                </label>
                                <input asp-for="Address.Ward"
                                       class="form-control"
                                       placeholder="VD: Phường Bến Nghé" />
                                <span asp-validation-for="Address.Ward" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address.Street" class="form-label">
                                    <i class="fas fa-road me-1"></i>Đường/Số nhà
                                </label>
                                <input asp-for="Address.Street"
                                       class="form-control"
                                       placeholder="VD: 123 Nguyễn Huệ" />
                                <span asp-validation-for="Address.Street" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Bảo mật -->
                        <div class="mb-3">
                            <h5 class="mb-3">
                                <i class="fas fa-lock me-2 text-primary"></i>Bảo mật
                            </h5>
                            <a asp-controller="Auth"
                               asp-action="ResetPassword"
                               class="btn btn-outline-warning">
                                <i class="fas fa-key me-2"></i>Đổi mật khẩu
                            </a>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <div>
                                <button type="reset" class="btn btn-outline-danger me-2">
                                    <i class="fas fa-undo me-2"></i>Đặt lại
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Thông tin hỗ trợ -->
            <div class="alert alert-info mt-4">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Lưu ý:</strong> Thông tin địa chỉ sẽ được sử dụng để giao hàng.
                Vui lòng cập nhật chính xác để đảm bảo đơn hàng được giao đúng địa chỉ.
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('preview');
        const previewContainer = document.getElementById('imagePreview');

        if (file) {
            // Kiểm tra kích thước file (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('Kích thước ảnh không được vượt quá 5MB');
                event.target.value = '';
                previewContainer.style.display = 'none';
                return;
            }

            // Kiểm tra định dạng
            const validTypes = ['image/jpeg', 'image/png', 'image/jpg'];
            if (!validTypes.includes(file.type)) {
                alert('Chỉ chấp nhận file ảnh định dạng JPG, PNG');
                event.target.value = '';
                previewContainer.style.display = 'none';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                previewContainer.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            previewContainer.style.display = 'none';
        }
    }

    // Reset preview khi reset form
    document.querySelector('button[type="reset"]')?.addEventListener('click', function() {
        document.getElementById('imagePreview').style.display = 'none';
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}