@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="bg-black text-white py-5">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-store me-3"></i>Simple Ecommerce
                </h1>
                <p class="lead mb-4">
                    Nền tảng mua sắm trực tuyến đơn giản và tiện lợi
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-outline-light btn-dark">
                        <i class="fas fa-th-large me-2"></i>Xem danh mục
                    </a>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-light btn-dark">
                        <i class="fas fa-shopping-bag me-2"></i>Sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="container my-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="p-4">
                <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                <h5>Giao hàng nhanh</h5>
                <p class="text-muted">Miễn phí vận chuyển cho đơn từ 500.000đ</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4">
                <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                <h5>Thanh toán an toàn</h5>
                <p class="text-muted">Bảo mật thông tin khách hàng 100%</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4">
                <i class="fas fa-headset fa-3x text-info mb-3"></i>
                <h5>Hỗ trợ 24/7</h5>
                <p class="text-muted">Tư vấn nhiệt tình, giải đáp mọi thắc mắc</p>
            </div>
        </div>
    </div>
</div>