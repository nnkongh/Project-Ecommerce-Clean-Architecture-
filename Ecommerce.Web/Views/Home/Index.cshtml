<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Ecommerce Homepage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header, footer {
            padding: 16px;
            background: #f2f2f2;
        }

        .container {
            padding: 16px;
        }

        .categories, .products {
            margin-bottom: 24px;
        }

        .category-list, .product-list {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .category, .product {
            border: 1px solid #ccc;
            padding: 12px;
            width: 180px;
        }
    </style>
</head>
<body>

    <header>
        <strong>My Ecommerce</strong>
        |
        <input type="text" placeholder="Search..." />
        |
        <a href="/login">Login</a>
        |
        <a href="/cart">Cart</a>
    </header>

    <div class="container">

        <section class="categories">
            <h3>Categories</h3>
            <div class="category-list" id="categoryList">
                <!-- Render category từ API -->
                <div class="category">Laptop</div>
                <div class="category">Phone</div>
            </div>
        </section>

        <section class="products">
            <h3>Products</h3>
            <div class="product-list" id="productList">
                <!-- Render product từ API -->
                <div class="product">
                    <p><strong>Product name</strong></p>
                    <p>Price: 100$</p>
                    <button>Add to cart</button>
                </div>
            </div>
        </section>

    </div>

    

</body>
</html>
