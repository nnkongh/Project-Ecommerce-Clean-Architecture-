@using Ecommerce.WebApi.ViewModels.AuthView
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <p class="text-muted text-center mb-4">
                    Nhập email của bạn để nhận link đặt lại mật khẩu
                </p>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <input type="hidden" asp-for="ClientUrl" value="@($"{Context.Request.Scheme}://{Context.Request.Host}")" />
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="email@example.com" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Gửi link đặt lại mật khẩu</button>
                    </div>
                </form>

                <div class="text-center">
                    <a asp-action="Login">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}