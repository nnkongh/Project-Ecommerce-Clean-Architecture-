@using Ecommerce.WebApi.ViewModels.AuthView
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" value="@Model.Email" disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Ít nhất 6 ký tự" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}