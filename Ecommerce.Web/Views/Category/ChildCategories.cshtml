@using Ecommerce.Application.DTOs.Models
@model IReadOnlyList<CategoryViewModel>

@{
    ViewData["Title"] = "Danh mục con";
    var parentId = ViewBag.ParentCategoryId as int?;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var displayProducts = ViewBag.DisplayProducts as List<ProductViewModel> ?? new List<ProductViewModel>();
    var selectedCategory = Model?.FirstOrDefault(c => c.Id == selectedCategoryId);
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Breadcrumb */
        .breadcrumb-section {
            background: white;
            padding: 15px 25px;
            margin-bottom: 25px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .breadcrumb {
            list-style: none;
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
            margin: 0;
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
        }

            .breadcrumb-item a {
                color: #667eea;
                text-decoration: none;
                transition: color 0.3s;
            }

                .breadcrumb-item a:hover {
                    color: #5568d3;
                }

            .breadcrumb-item.active {
                color: #6c757d;
            }

            .breadcrumb-item + .breadcrumb-item::before {
                content: "›";
                color: #6c757d;
                font-size: 18px;
                margin: 0 8px;
            }

        /* Back Button */
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: white;
            border: 2px solid #667eea;
            color: #667eea;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            margin-bottom: 30px;
        }

            .back-button:hover {
                background: #667eea;
                color: white;
                transform: translateX(-3px);
            }

        /* Section Headers */
        .section-header {
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 3px solid #667eea;
        }

            .section-header h2 {
                font-size: 26px;
                color: #333;
                display: flex;
                align-items: center;
                gap: 12px;
            }

                .section-header h2 i {
                    color: #667eea;
                }

            .section-header p {
                color: #6c757d;
                margin-top: 8px;
                font-size: 14px;
            }

        /* Filter Bar */
        .filter-bar {
            background: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 15px;
        }

        .filter-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .filter-info i {
                color: #667eea;
                font-size: 20px;
            }

            .filter-info span {
                font-size: 15px;
                color: #333;
            }

            .filter-info strong {
                color: #667eea;
            }

        .clear-filter {
            padding: 8px 16px;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            color: #6c757d;
            text-decoration: none;
            border-radius: 6px;
            font-size: 14px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .clear-filter:hover {
                background: #e9ecef;
                color: #495057;
            }

        /* Child Categories Grid */
        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 50px;
        }

        .category-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            text-decoration: none;
            color: #333;
            transition: all 0.3s;
            border: 2px solid transparent;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            position: relative;
            overflow: hidden;
        }

            .category-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #667eea, #764ba2);
                transform: scaleX(0);
                transition: transform 0.3s;
            }

            .category-card:hover {
                transform: translateY(-5px);
                border-color: #667eea;
                box-shadow: 0 8px 20px rgba(102, 126, 234, 0.25);
            }

                .category-card:hover::before {
                    transform: scaleX(1);
                }

            .category-card.active {
                border-color: #667eea;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

                .category-card.active .category-icon,
                .category-card.active .category-name,
                .category-card.active .category-count {
                    color: white;
                }

                .category-card.active::before {
                    transform: scaleX(1);
                    background: white;
                }

        .category-icon {
            font-size: 48px;
            color: #667eea;
            margin-bottom: 15px;
            display: block;
        }

        .category-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .category-count {
            font-size: 13px;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

            .category-count i {
                font-size: 12px;
            }

        /* Products Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .product-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            text-decoration: none;
            color: #333;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            }

        .product-image {
            width: 100%;
            height: 220px;
            object-fit: cover;
            background: #f8f9fa;
        }

        .product-body {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .product-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-price {
            font-size: 20px;
            color: #e74c3c;
            font-weight: 700;
            margin-top: auto;
        }

        .product-category-badge {
            display: inline-block;
            padding: 4px 12px;
            background: #e7f0ff;
            color: #667eea;
            border-radius: 20px;
            font-size: 12px;
            margin-bottom: 10px;
        }

        /* Empty States */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

            .empty-state i {
                font-size: 64px;
                color: #ddd;
                margin-bottom: 20px;
            }

            .empty-state p {
                color: #6c757d;
                font-size: 16px;
            }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Breadcrumb -->
        <div class="breadcrumb-section">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Category")">Danh mục</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Danh mục con
                    </li>
                </ol>
            </nav>
        </div>

        <!-- Back Button -->
        <a href="@Url.Action("Index", "Category")" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Quay lại danh mục chính
        </a>

        <!-- Child Categories Section -->
        @if (Model != null && Model.Any())
        {
            <section style="margin-bottom: 50px;">
                <div class="section-header">
                    <h2>
                        <i class="fas fa-layer-group"></i>
                        Danh mục con
                    </h2>
                    <p>Chọn danh mục để lọc sản phẩm</p>
                </div>

                <div class="categories-grid">
                    @foreach (var category in Model)
                    {
                        <a href="@Url.Action("ChildCategories", "Category", new { id = parentId, selectedCategoryId = category.Id })"
                           class="category-card @(category.Id == selectedCategoryId ? "active" : "")">
                            <i class="@GetCategoryIcon(category.Name) category-icon"></i>
                            <div class="category-name">@category.Name</div>
                            <div class="category-count">
                                <i class="fas fa-box"></i>
                                <span>@(category.Products?.Count ?? 0) sản phẩm</span>
                            </div>
                        </a>
                    }
                </div>
            </section>
        }

        <!-- Filter Info Bar -->
        @if (selectedCategoryId.HasValue && selectedCategory != null)
        {
            <div class="filter-bar">
                <div class="filter-info">
                    <i class="fas fa-filter"></i>
                    <span>Đang xem sản phẩm: <strong>@selectedCategory.Name</strong></span>
                </div>
                <a href="@Url.Action("ChildCategories", "Category", new { id = parentId })" class="clear-filter">
                    <i class="fas fa-times"></i>
                    Xóa bộ lọc
                </a>
            </div>
        }

        <!-- Products Section -->
        <section>
            <div class="section-header">
                <h2>
                    <i class="fas fa-shopping-bag"></i>
                    @if (selectedCategoryId.HasValue && selectedCategory != null)
                    {
                        <span>Sản phẩm @selectedCategory.Name</span>
                    }
                    else
                    {
                        <span>Tất cả sản phẩm</span>
                    }
                </h2>
                <p>@displayProducts.Count sản phẩm có sẵn</p>
            </div>

            @if (displayProducts != null && displayProducts.Any())
            {
                <div class="products-grid">
                    @foreach (var product in displayProducts)
                    {
                        <a href="@Url.Action("Detail", "Product", new { id = product.Id })" class="product-card">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                            }
                            else
                            {
                                <div class="product-image" style="display: flex; align-items: center; justify-content: center; color: #ccc;">
                                    <i class="fas fa-image" style="font-size: 48px;"></i>
                                </div>
                            }

                            <div class="product-body">
                                <div class="product-name">@product.Name</div>
                                @if (product.Price > 0)
                                {
                                    <div class="product-price">@product.Price.ToString("N0") đ</div>
                                }
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <p>Chưa có sản phẩm nào trong danh mục này</p>
                </div>
            }
        </section>
    </div>
</body>
</html>

@functions {
    string GetCategoryIcon(string name)
    {
        return name.ToLower() switch
        {
            "iphone" => "fab fa-apple",
            "apple" => "fab fa-apple",
            "samsung" => "fas fa-mobile-alt",
            "xiaomi" => "fas fa-mobile-alt",
            "oppo" => "fas fa-mobile-alt",
            "vivo" => "fas fa-mobile-alt",
            "realme" => "fas fa-mobile-alt",
            "laptop" => "fas fa-laptop",
            "máy tính" => "fas fa-desktop",
            "điện thoại" => "fas fa-mobile-alt",
            "smartphone" => "fas fa-mobile-alt",
            "tablet" => "fas fa-tablet-alt",
            "tai nghe" => "fas fa-headphones",
            "headphone" => "fas fa-headphones",
            "bàn phím" => "fas fa-keyboard",
            "keyboard" => "fas fa-keyboard",
            "chuột" => "fas fa-mouse",
            "mouse" => "fas fa-mouse",
            "webcam" => "fas fa-video",
            "camera" => "fas fa-camera",
            "màn hình" => "fas fa-tv",
            "monitor" => "fas fa-tv",
            "ổ cứng" => "fas fa-hdd",
            "ssd" => "fas fa-hdd",
            "ram" => "fas fa-memory",
            "card đồ họa" => "fas fa-microchip",
            "gpu" => "fas fa-microchip",
            "cpu" => "fas fa-microchip",
            "gaming" => "fas fa-gamepad",
            "game" => "fas fa-gamepad",
            "loa" => "fas fa-volume-up",
            "speaker" => "fas fa-volume-up",
            "router" => "fas fa-wifi",
            "wifi" => "fas fa-wifi",
            "usb" => "fas fa-usb-drive",
            "ổ đĩa" => "fas fa-compact-disc",
            _ => "fas fa-box"
        };
    }
}