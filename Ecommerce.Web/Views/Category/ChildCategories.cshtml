@using Ecommerce.Application.DTOs.Models
@model IReadOnlyList<CategoryViewModel>

@{
    ViewData["Title"] = "Danh mục con";
    var parentId = ViewBag.ParentCategoryId as int?;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var displayProducts = ViewBag.DisplayProducts as List<ProductViewModel> ?? new List<ProductViewModel>();
    var selectedCategory = Model?.FirstOrDefault(c => c.Id == selectedCategoryId);
}

<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home me-1"></i>Trang chủ
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Category")">Danh mục</a>
            </li>
            <li class="breadcrumb-item active">Danh mục con</li>
        </ol>
    </nav>

    <!-- Back Button -->
    <a href="@Url.Action("Index", "Category")" class="btn btn-outline-secondary mb-4">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>

    <!-- Danh mục con -->
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-layer-group me-2"></i>Danh mục con
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var category in Model)
                    {
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("ChildCategories", "Category", new { id = parentId, selectedCategoryId = category.Id })"
                               class="text-decoration-none">
                                <div class="card h-100 text-center @(category.Id == selectedCategoryId ? "border-primary bg-primary text-white" : "")">
                                    <div class="card-body">
                                        <i class="@GetCategoryIcon(category.Name) fa-3x mb-3 @(category.Id == selectedCategoryId ? "text-white" : "text-primary")"></i>
                                        <h6 class="card-title mb-2">@category.Name</h6>
                                        <p class="card-text small mb-0">
                                            <i class="fas fa-box me-1"></i>
                                            @(category.Products?.Count ?? 0) sản phẩm
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Filter Info -->
    @if (selectedCategoryId.HasValue && selectedCategory != null)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center">
            <span>
                <i class="fas fa-filter me-2"></i>
                Đang lọc: <strong>@selectedCategory.Name</strong>
            </span>
            <a href="@Url.Action("ChildCategories", "Category", new { id = parentId })"
               class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-times me-1"></i>Xóa bộ lọc
            </a>
        </div>
    }

    <!-- Sản phẩm -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>
                    @if (selectedCategoryId.HasValue && selectedCategory != null)
                    {
                        <span>@selectedCategory.Name</span>
                    }
                    else
                    {
                        <span>Tất cả sản phẩm</span>
                    }
                </h5>
                <span class="badge bg-primary">@displayProducts.Count sản phẩm</span>
            </div>
        </div>

        <div class="card-body">
            @if (displayProducts != null && displayProducts.Any())
            {
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                    @foreach (var product in displayProducts)
                    {
                        <div class="col">
                            <div class="card h-100 product-card">
                                <a href="@Url.Action("Detail", "Product", new { id = product.Id })"
                                   class="text-decoration-none">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl"
                                             class="card-img-top"
                                             alt="@product.Name"
                                             style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                             style="height: 200px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    }

                                    <div class="card-body">
                                        <h6 class="card-title text-dark mb-2"
                                            style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                            @product.Name
                                        </h6>
                                        @if (product.Price > 0)
                                        {
                                            <p class="card-text text-danger fw-bold fs-5 mb-0">
                                                @product.Price.ToString("N0") đ
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="card-text text-muted mb-0">Liên hệ</p>
                                        }
                                    </div>
                                </a>
                                <div class="card-footer bg-transparent border-0 pt-0">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="Id" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                            <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có sản phẩm nào trong danh mục này</p>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-primary mt-2">
                        Xem danh mục khác
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card.border-primary {
        border-width: 2px !important;
    }
</style>

@functions {
    string GetCategoryIcon(string name)
    {
        return name.ToLower() switch
        {
            "iphone" => "fab fa-apple",
            "apple" => "fab fa-apple",
            "samsung" => "fas fa-mobile-alt",
            "xiaomi" => "fas fa-mobile-alt",
            "oppo" => "fas fa-mobile-alt",
            "vivo" => "fas fa-mobile-alt",
            "realme" => "fas fa-mobile-alt",
            "laptop" => "fas fa-laptop",
            "máy tính" => "fas fa-desktop",
            "điện thoại" => "fas fa-mobile-alt",
            "smartphone" => "fas fa-mobile-alt",
            "tablet" => "fas fa-tablet-alt",
            "tai nghe" => "fas fa-headphones",
            "headphone" => "fas fa-headphones",
            "bàn phím" => "fas fa-keyboard",
            "keyboard" => "fas fa-keyboard",
            "chuột" => "fas fa-mouse",
            _ => "fas fa-box"
        };
    }
}