<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    @{
        var hideAuthHeader = ViewData["HideAuthHeader"] as bool? ?? false;
    }

    @if (!hideAuthHeader)
    {
        <header class="bg-dark">
            <nav class="container-fluid">
                <ul class="navbar-nav d-flex flex-row align-items-center px-4 w-100">

                    <!-- BÊN TRÁI -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item me-auto">
                            <span class="nav-link text-light fw-semibold mb-0">
                                <i class="fas fa-user-circle me-1"></i>
                                Xin chào @User.Identity.Name
                            </span>
                        </li>
                    }
                    <li class="nav-item mx-auto" style="max-width: 400px; width: 100%;">
                        <form asp-controller="Product"
                              asp-action="Search"
                              method="get"
                              class="d-flex">
                            <input class="form-control me-2"
                                   type="search"
                                   name="name"
                                   placeholder="Tìm sản phẩm..." />
                            <button class="btn btn-outline-light" type="submit">
                                Tìm
                            </button>
                        </form>
                    </li>


                    <!-- BÊN PHẢI -->
                    <li class="nav-item d-flex align-items-center gap-4">

                        <a class="nav-link text-light fw-semibold"
                           asp-controller="Category"
                           asp-action="Index">
                            <i class="fas fa-list me-1"></i>
                            Danh mục
                        </a>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Dropdown Thông tin cá nhân -->
                            <div class="dropdown">
                                <a class="nav-link text-light dropdown-toggle"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>
                                    Thông tin cá nhân
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Profile"
                                           asp-action="Index">
                                            <i class="fas fa-user-circle me-2"></i>
                                            Trang cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Order"
                                           asp-action="Index">
                                            <i class="fas fa-shopping-bag me-2"></i>
                                            Đơn hàng
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Wishlist"
                                           asp-action="Index">
                                            <i class="fas fa-heart me-2"></i>
                                            Yêu thích
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Product"
                                           asp-action="Create">
                                            <i class="fas fa-heart me-2"></i>
                                            Tạo sản phẩm
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Cart"
                                           asp-action="Index">
                                            <i class="fas fa-heart me-2"></i>
                                            Giỏ hàng
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth"
                                              asp-action="Logout"
                                              method="post"
                                              class="m-0">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>
                                                Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link text-light"
                               asp-controller="Auth"
                               asp-action="Login">
                                Đăng nhập
                            </a>

                            <a class="nav-link text-light"
                               asp-controller="Auth"
                               asp-action="Register">
                                Đăng ký
                            </a>
                        }

                    </li>
                </ul>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2026 - Simple Ecommerce
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>