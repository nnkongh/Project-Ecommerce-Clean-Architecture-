<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.Web.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var hideAuthHeader = ViewData["HideAuthHeader"] as bool? ?? false;
    }

    @if (!hideAuthHeader)
    {
        <header class="bg-dark">
            <nav class="container-fluid">
                <ul class="navbar-nav d-flex flex-row justify-content-end align-items-center gap-4 px-4">

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item d-flex align-items-center gap-4">
                            <span class="nav-link text-light fw-semibold mb-0">
                                <i class="fas fa-user-circle me-1"></i>
                                Xin chào @User.Identity.Name
                            </span>

                            <a class="nav-link text-light"
                               asp-controller="Profile"
                               asp-action="Index">
                                Thông tin cá nhân
                            </a>

                            <a class="nav-link text-light"
                               asp-controller="Orders"
                               asp-action="Index">
                                Đơn hàng
                            </a>

                            <form asp-controller="Auth"
                                  asp-action="Logout"
                                  method="post"
                                  class="m-0">
                                <button type="submit" class="btn btn-link">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item d-flex align-items-center gap-4">
                            <a class="nav-link text-light"
                               asp-controller="Auth"
                               asp-action="Login">
                                Đăng nhập
                            </a>

                            <a class="nav-link text-light"
                               asp-controller="Auth"
                               asp-action="Register">
                                Đăng ký
                            </a>
                        </li>
                    }

                </ul>
            </nav>
        </header>

    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2026 - Simple Ecommerce
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
