@model ProductViewModel

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Tạo sản phẩm mới
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Upload hình ảnh -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Image" class="form-label">
                                    <i class="fas fa-image me-1"></i>Hình ảnh sản phẩm
                                </label>
                                <input asp-for="Image" 
                                       type="file" 
                                       class="form-control" 
                                       accept="image/*" 
                                       onchange="previewImage(event)" />
                                <span asp-validation-for="Image" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 text-center">
                                <img id="preview" 
                                     src="#" 
                                     alt="Preview" 
                                     class="img-thumbnail"
                                     style="max-width: 150px; max-height: 150px; object-fit: contain; display: none;" />
                            </div>
                        </div>

                        <!-- Thông tin sản phẩm -->
                        <div class="row g-3 mb-3">
                            <!-- Tên sản phẩm -->
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Tên sản phẩm <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" 
                                       class="form-control" 
                                       placeholder="Nhập tên sản phẩm" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <!-- Giá -->
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>Giá (VNĐ) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Price" 
                                       type="number" 
                                       step="1000" 
                                       class="form-control" 
                                       placeholder="0" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <!-- Mô tả -->
                            <div class="col-md-8">
                                <label asp-for="Description" class="form-label">
                                    <i class="fas fa-align-left me-1"></i>Mô tả
                                </label>
                                <textarea asp-for="Description" 
                                          class="form-control" 
                                          rows="3" 
                                          placeholder="Nhập mô tả chi tiết"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <!-- Tồn kho -->
                            <div class="col-md-4">
                                <label asp-for="Stock" class="form-label">
                                    <i class="fas fa-boxes me-1"></i>Tồn kho <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Stock" 
                                       type="number" 
                                       min="0"
                                       class="form-control" 
                                       placeholder="0" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>

                            <!-- Danh mục cha -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-layer-group me-1"></i>Danh mục cha
                                </label>
                                <select id="parentCategorySelect" class="form-select">
                                    <option value="">-- Chọn danh mục cha --</option>
                                    @if (Model.ParentCategories != null && Model.ParentCategories.Any())
                                    {
                                        @foreach (var category in Model.ParentCategories)
                                        {
                                            <option value="@category.Value">@category.Text</option>
                                        }
                                    }
                                </select>
                            </div>

                            <!-- Danh mục con -->
                            <div class="col-md-6" id="childCategoryGroup" style="display: none;">
                                <label asp-for="CategoryId" class="form-label">
                                    <i class="fas fa-tags me-1"></i>Danh mục con <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CategoryId" id="childCategorySelect" class="form-select">
                                    <option value="">-- Chọn danh mục con --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <div>
                                <button type="reset" class="btn btn-outline-danger me-2" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>Đặt lại
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Tạo sản phẩm
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    const allCategories = @Html.Raw(Json.Serialize(Model.AllCategories.Select(c => new { 
        id = c.Id, 
        name = c.Name, 
        parentId = c.ParentId 
    })));

    $(document).ready(function() {
        const parentSelect = $('#parentCategorySelect');
        const childGroup = $('#childCategoryGroup');
        const childSelect = $('#childCategorySelect');
        
        // Khi chọn danh mục cha
        parentSelect.on('change', function() {
            const parentId = parseInt($(this).val());
            
            if (!parentId) {
                childGroup.slideUp(300);
                childSelect.val('').trigger('change');
                return;
            }
            
            // Lọc danh mục con
            const childCategories = allCategories.filter(c => c.parentId === parentId);
            
            if (childCategories.length > 0) {
                childSelect.empty();
                childSelect.append('<option value="">-- Chọn danh mục con --</option>');
                
                childCategories.forEach(category => {
                    childSelect.append(`<option value="${category.id}">${category.name}</option>`);
                });
                
                childGroup.slideDown(300);
            } else {
                childGroup.slideUp(300);
                childSelect.val('');
            }
        });
    });

    function previewImage(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('preview');

        if (file) {
            // Kiểm tra kích thước (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('Kích thước ảnh không được vượt quá 5MB');
                event.target.value = '';
                preview.style.display = 'none';
                return;
            }

            // Kiểm tra định dạng
            const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg'];
            if (!validTypes.includes(file.type)) {
                alert('Chỉ chấp nhận file ảnh định dạng JPG, PNG, GIF');
                event.target.value = '';
                preview.style.display = 'none';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            preview.style.display = 'none';
        }
    }

    function resetForm() {
        document.getElementById('preview').style.display = 'none';
        document.getElementById('childCategoryGroup').style.display = 'none';
        document.getElementById('parentCategorySelect').value = '';
        document.getElementById('childCategorySelect').value = '';
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}