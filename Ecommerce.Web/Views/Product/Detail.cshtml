@model ProductViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div style="max-width: 800px; margin: 20px auto; padding: 20px;">
    <input type="hidden" asp-for="Id" />

    <h2 style="margin-bottom: 20px; color: #333;">Chi tiết sản phẩm</h2>

    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; background-color: #fff;">

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div style="text-align: center; margin-bottom: 20px;">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 400px; max-height: 400px; border: 1px solid #ddd; border-radius: 4px;" />
            </div>
        }

        <table style="width: 100%; border-collapse: collapse;">
            <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 12px; font-weight: bold; width: 30%;">Tên sản phẩm:</td>
                <td style="padding: 12px;">@Model.Name</td>
            </tr>
            <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 12px; font-weight: bold;">Mô tả:</td>
                <td style="padding: 12px;">@Model.Description</td>
            </tr>
            <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 12px; font-weight: bold;">Giá:</td>
                <td style="padding: 12px; color: #dc3545; font-size: 18px; font-weight: bold;">
                    @if (Model.Price > 0)
                    {
                        @Model.Price.ToString("N0") <text> VNĐ</text>
                    }
                    else
                    {
                        <text>Chưa có giá</text>
                    }
                </td>
            </tr>
            <tr style="border-bottom: 1px solid #eee;">
                <td style="padding: 12px; font-weight: bold;">Tồn kho:</td>
                <td style="padding: 12px;">
                    @if (Model.Stock > 0)
                    {
                        <form asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post"
                              style="margin-top: 20px; text-align: center;">

                            <input type="hidden" name="Id" value="@Model.Id" />

                            <input type="number"
                                   name="quantity"
                                   value="1"
                                   min="1"
                                   max="@Model.Stock"
                                   style="width: 40px; padding: 6px; margin-right: 10px;" />

                            <button type="submit"
                                    style="padding: 10px 20px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                🛒 Thêm vào giỏ hàng
                            </button>
                        </form>
                    }
                    else
                    {
                        <p style="color: #dc3545; text-align: center; margin-top: 20px;">
                            Sản phẩm đã hết hàng
                        </p>
                    }

                </td>
            </tr>
        </table>

        <div style="margin-top: 30px; text-align: center;">
            <a href="@Url.Action("Edit", new { id = Model.Id })" style="padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px; margin-right: 10px;">
                Chỉnh sửa
            </a>
            <button onclick="history.back()" style="padding: 8px 16px; background-color: #6c757d; color: white; border: none; cursor: pointer; border-radius: 4px;">
                ← Quay lại
            </button>
        </div>
    </div>
</div>